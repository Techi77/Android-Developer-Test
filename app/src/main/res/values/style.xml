<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">17dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bt_change_currency">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/bt_change_currency_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">35sp</item>
        <item name="android:layout_marginTop">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bt_change_currency_active">
        <item name="colorPrimary">@color/main_blue</item>
    </style>
    <style name="bt_change_currency_inactive">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>